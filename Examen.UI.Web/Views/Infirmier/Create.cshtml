
// Examen.Web/Views/Infirmier/Create.cshtml
@model Examen.Web.Models.InfirmierViewModel

<h2>Ajouter un Infirmier</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="CodeInfirmier" class="control-label"></label>
        <input asp-for="CodeInfirmier" class="form-control" />
        <span asp-validation-for="CodeInfirmier" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Nom" class="control-label"></label>
        <input asp-for="Nom" class="form-control" />
        <span asp-validation-for="Nom" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Specialite" class="control-label"></label>
        <select asp-for="Specialite" class="form-control" asp-items="@(new SelectList(Model.Specialites))">
            <option value="">-- Sélectionner une spécialité --</option>
        </select>
        <span asp-validation-for="Specialite" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="LaboratoireId" class="control-label"></label>
        <select asp-for="LaboratoireId" class="form-control" asp-items="@(new SelectList(Model.Laboratoires, "Id", "Intitule"))">
            <option value="">-- Sélectionner un laboratoire --</option>
        </select>
        <span asp-validation-for="LaboratoireId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Créer" class="btn btn-primary" />
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}